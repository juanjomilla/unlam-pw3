@model AyudandoEnLaPandemia.Models.FormularioLogin

@{
    ViewBag.Title = "LoginUsuario";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<h2>LoginUsuario</h2>


@using (Html.BeginForm("LoginUsuario", "Login", FormMethod.Post, new { id = "loginForm" }))
{
    if (ViewBag.url != null)
    {
        <input type="hidden" name="urlRedirect" value="@ViewBag.url" />
    }

    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }


    <div>
        Email: @Html.EditorFor(o => o.email)
        @Html.ValidationMessageFor(o => o.email)
    </div>

    <div>
        Password: @Html.EditorFor(o => o.password)
        @Html.ValidationMessageFor(o => o.password)
    </div>

    <input type="submit" value="Ingresar" />

    <div id="datosInvalidos" style="display: none;">
        <p> Email y/o Contraseña inválidos </p>
    </div>
}

