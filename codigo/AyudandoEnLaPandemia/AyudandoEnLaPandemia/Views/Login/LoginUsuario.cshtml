@model AyudandoEnLaPandemia.Models.FormularioLogin

@{
    ViewBag.Title = "LoginUsuario";
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="card">
                <div class="card-header">Ingresá</div>
                <div class="card-body">
                    <form action="/Login/LoginUsuario" method="post">
                        <div class="form-group">
                            Email: @Html.EditorFor(o => o.email)
                            @Html.ValidationMessageFor(o => o.email)
                        </div>
                        <div class="form-group">
                            Password: @Html.PasswordFor(o => o.password)
                            @Html.ValidationMessageFor(o => o.password)
                        </div>

                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
</div>