@model Repositorio.Usuarios

@{
    Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center"><h4>Ingresá</h4></div>
                <div class="card-body">
                    <form action="/Login/LoginUsuario" method="post" id="Usuarios">
                        @if (ViewBag.url != null)
                        {
                            <input type="hidden" name="redirigir" value="@ViewBag.url" />
                        }

                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-danger text-center mx-5" role="alert">
                                @ViewBag.Message
                            </div>
                        }
                        <div class="form-group row">
                            <div class="col-md-6 mx-auto">
                                @Html.TextBoxFor(o => Model.Email, new { @type = "email", @class = "form-control", @placeholder = "Correo electrónico" })
                                @Html.ValidationMessageFor(o => o.Email)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mx-auto">
                                @Html.PasswordFor(o => Model.Password, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })
                                @Html.ValidationMessageFor(o => o.Password)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mx-auto">
                                <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                                <hr />
                                @Html.ActionLink("Crear cuenta", "RegistroUsuario", "Login", new { area = "" }, new { @class = "btn btn-secondary btn-block", role = "button" })
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>