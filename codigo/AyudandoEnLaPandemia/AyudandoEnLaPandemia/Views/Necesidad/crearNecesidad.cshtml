@model CrearNecesidadViewModel

@{ 
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        @using (Html.BeginForm("GuardarNecesidad", "Necesidad", FormMethod.Post, new { id = "CrearNecesidadForm", enctype = "multipart/form-data", @class = "form-group" }))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.Form.Nombre, "Nombre")
                        @Html.TextBoxFor(model => Model.Form.Nombre, new { @class = "form-control" })

                        @Html.LabelFor(model => Model.Form.Descripcion, "Descripcion")
                        @Html.TextBoxFor(model => Model.Form.Descripcion, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => Model.Form.FechaFin, "Fecha de finalización (dd/mm/aa)")
                        @Html.EditorFor(model => Model.Form.FechaFin, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.LabelFor(model => Model.Form.TelefonoDeContacto, "Teléfono de contacto")
                        @Html.TextBoxFor(model => Model.Form.TelefonoDeContacto, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => Model.Form.TipoDonacion, "Tipo de donación")
                    @Html.EnumDropDownListFor(model => Model.Form.TipoDonacion, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 tipoDonacion 0">
                    <div id="monetaria">
                        <div class="row">
                            <div class="col-md-6">
                                @Html.LabelFor(model => Model.Form.CantidadDinero, "Cantidad de dinero")
                                @Html.TextBoxFor(model => Model.Form.CantidadDinero, new { @class = "form-control" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(model => Model.Form.CBUAlias, "CBU/Alias")
                                @Html.TextBoxFor(model => Model.Form.CBUAlias, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 tipoDonacion 1">
                    <div id="insumos">
                        @Html.LabelFor(model => Model.Form.Insumos, "Insumos")
                        <div id="editorInsumos">
                            @Html.EditorFor(model => Model.Form.Insumos, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <input class="btn btn-primary" type="button" id="btnAgregarInsumo" value="Agregar insumos" />
                    </div>
                </div>
            </div>

            <div>
                @Html.LabelFor(model => Model.Form.Referencias, "Referencias")
                <div id="editorReferencias">
                    @Html.EditorFor(model => Model.Form.Referencias, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <input type="file" title="Agregar imagen" id="imagenNecesidad" name="imagenNecesidad" class="form-control-file" />

            <input type="submit" value="Crear" class="btn btn-primary" />
        }
    </div>
</div>