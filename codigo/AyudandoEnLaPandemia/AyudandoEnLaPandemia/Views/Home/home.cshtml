@model HomeViewModel

<div class="form-inline my-2 my-lg-0 ml-auto" id = "busquedaForm">
    <input class="form-control" type="search" placeholder="Buscar..." aria-label="Search" id="busqueda" name="busqueda">
    <button class="btn btn-primary btn-md my-2 my-sm-0 ml-3" type="submit" id="btnBusqueda">Buscar</button>
</div>

<div>
    <div>
        <div>
            <a class="btn btn-primary" data-toggle="collapse" href="#misNecesidades" role="button" aria-expanded="true" aria-controls="misNecesidades" id="contraerBtn">Ocultar mis necesidades</a>
        </div>
        <div class="custom-checkbox">
            @Html.CheckBox("chkMostrarTodas", true)
            @Html.Label("chkMostrarTodas", "Solo visualizar activas")
        </div>
        <div class="collapse show" id="misNecesidades">
            <h2>Mis Necesidades</h2>
            @{
                Html.RenderPartial("~/Views/Shared/_necesidadPartial.cshtml", new NecesidadViewModel { Necesidades = Model.MisNecesidades });
            }
        </div>
    </div>
    <div id="otrasNecesidades">
        <h2>Resultado búsqueda</h2>
        <div id="resultadosBusqueda"></div>
    </div>
</div>