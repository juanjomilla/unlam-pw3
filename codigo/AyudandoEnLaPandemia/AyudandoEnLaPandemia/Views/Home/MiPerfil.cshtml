
@{
    ViewBag.Title = "MiPerfil";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0">Mi Perfil</h3>
            </div>
            <div class="card-body">
                <form class="form" role="form" autocomplete="off">
                    <div class="form-group row text-center">
                        <div class="col-lg-6 offset-lg-3">
                            <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="">
                            <h6>Actualiza tu foto...</h6>
                            <label class="btn btn-primary">
                                Seleccionar archivo <input type="file" class="file-upload" hidden>
                            </label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Nombre:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="Marcelo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">Apellido:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="Gallardo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label">F. de Nacimiento:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="25/05/2020">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label form-control-label"></label>
                        <div class="col-lg-8">
                            <input type="reset" class="btn btn-secondary" value="Cancelar">
                            <input type="button" class="btn btn-primary" value="Guardar">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>